<html>

<head>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/style.css" type="text/css" rel="stylesheet">
	<title><%=title%></title>
	<script>
		function goBack() {
			window.history.back();
		}
	</script>
</head>

<body>

	<div class="box">
		<h1><%=title%></h1>
		<form action="<%=path%>" method='POST'>
			<input type='text' name='user[userid]' placeholder="Username" required/><br />
			<input type='password' name='user[password]' placeholder="Password" /><br />
			<input type="Submit" value="Submit">
		</form>
		<% if (title == 'Login') { %>
		<input type="button" onclick="location.href='/register';" value="Register" />
		<% } %>
		<% if (title == 'Register') { %>
		<button onclick="goBack()">Back</button>
		<% } %>
	</div>

</body>

</html>